    "prepublishOnly": "bun run lint && bun run typecheck && bun run build",
    "bump": "bumpp"
  },
  "dependencies": {
    "decimal.js": "^10.6.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bumpp": "^10.3.2",
    "oxfmt": "^0.26.0",
